<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsNote.Views.MapPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             xmlns:prism="http://prismlibrary.com"
             xmlns:converters="clr-namespace:GpsNote.Converters"
             Title="Map">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:MapClickedEventArgsConverter x:Key="mapClickedEventArgsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand">
        <maps:Map x:Name="map"
                  MyLocationEnabled="True"
                  VerticalOptions="FillAndExpand"
                  HasScrollEnabled="True"
                  HasZoomEnabled="True" 
                  MapType="{Binding MapType}">
            
            <maps:Map.Behaviors>
                <prism:EventToCommandBehavior EventName="MapClicked"
                                              Command="{Binding TapCommand}"
                                              EventArgsConverter="{StaticResource mapClickedEventArgsConverter}" />
            </maps:Map.Behaviors>
        </maps:Map>
    </Grid>
</ContentPage>