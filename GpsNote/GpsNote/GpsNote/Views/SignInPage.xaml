<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GpsNote.Controls"
             x:Class="GpsNote.Views.SignInPage"
             NavigationPage.HasBackButton="False">
    
    <!-- NAVIGATION BAR -->
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="0.4*, 0.6*">

            <!-- BACK ARROW IMAGE -->
            <Image Source="ic_left_blue.png"
                   HorizontalOptions="Start">
                
                <Image.GestureRecognizers>

                    <TapGestureRecognizer Command="{Binding BackPressedCommand}"/>
                    
                </Image.GestureRecognizers>
                
            </Image>
            
            <!-- TITLE LABEL -->
            <Label x:Name="title"
                   Grid.Column="1"
                   Text="{Binding Title}" 
                   Style="{StaticResource navBarTitle}"/>

        </Grid>
    </NavigationPage.TitleView>


    <Grid
          Margin="20, 5, 20, 0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Margin="0, 0, 0, 10">
            
            <!-- EMAIL LABEL -->
            <Label Text="{Binding Resource[EmailText]}"
                   FontSize="Medium"
                   Margin="15, 0"/>


            <!-- EMAIL ENTRY-->
            <controls:CustomEntryAuth ImageSource="ic_clear.png"
                                      TextEntry="{Binding Email}"
                                      ErrorText="{Binding ErrorTextEmail}"
                                      PlaceholderText="Enter email"/>

            
        </StackLayout>
        

        <StackLayout Grid.Row="1"
                     Margin="0, 0, 0, 15">

            <Label Text="{Binding Resource[PasswordText]}"
                   FontSize="Medium"
                   Margin="15, 0"/>

            <!-- PASSWORD ENTRY-->
            <controls:CustomEntryAuth
                      ImageSource="ic_eye.png"
                      TextEntry="{Binding Password}"
                      ErrorText="{Binding ErrorTextPassword}"
                      PlaceholderText="Enter password"/>

            <!-- SIGNIN BUTTON --><!--
            <Button Text="SIGNIN"
                    BorderWidth="1"
                    IsEnabled="{Binding IsSignInButtonEnabled}"
                    Command="{Binding OnSignInButtonTapCommand}" />
            
            --><!-- OR LABEL --><!--
            <Label Text="or"
                   Margin="0, 20, 0, 20"
                   HorizontalOptions="Center"
                   FontSize="Medium"/>
            
            --><!-- GOOGLE BUTTON --><!--
            <Button Text="Login with GOOGLE"
                    BorderWidth="1"
                    Command="{Binding OnSignInGoogleButtonTapCommand}" />

            --><!-- ONSIGNUP LINK LABEL --><!--
            <Label HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand">
                
                <Label.FormattedText>
                    
                    <FormattedString>
                        
                        <FormattedString.Spans>
                            
                            <Span Text="SignUp" 
                                  TextDecorations="Underline"
                                  FontSize="Medium">
                                
                                <Span.GestureRecognizers>
                                    
                                    <TapGestureRecognizer Command="{Binding OnSignUpTapCommand}" />
                                    
                                </Span.GestureRecognizers>
                                
                            </Span>
                            
                        </FormattedString.Spans>
                        
                    </FormattedString>
                    
                </Label.FormattedText>
                
            </Label>-->
            
        </StackLayout>
        
        <!-- LOGIN BUTTON -->
        <Button Grid.Row="2"
                Text="{Binding Resource[LoginText]}"
                Style="{StaticResource mainButton1}"
                IsEnabled="{Binding IsSignInButtonEnabled}"
                Command="{Binding OnSignInButtonTapCommand}"
                VerticalOptions="Center"
                Margin="0, 0, 0, 15"/>

        <StackLayout Grid.Row="3"
                     VerticalOptions="Start"
                     Spacing="20">
            
            <Grid ColumnDefinitions="0.45*, 0.1*, 0.45*"
                  Margin="0, 0, 0, 15">

                <BoxView HeightRequest="1"
                         Style="{StaticResource separator}"/>
                
                <!-- OR LABEL -->
                <Label Grid.Column="1"
                   Text="or"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

                <BoxView Grid.Column="2"
                         Style="{StaticResource separator}"/>

            </Grid>

            <Grid Grid.Row="4"
              ColumnDefinitions="*, *, *"
              Margin="0, 0, 0, 50"
              VerticalOptions="Start" >

                <Button Grid.Column="0"
                    Style="{StaticResource alternativeLoginButton}"
                    ImageSource="ic_google.png"
                    />

                <Button Grid.Column="1"
                    Style="{StaticResource alternativeLoginButton}"
                    ImageSource="ic_facebook.png"/>

                <Button Grid.Column="2"
                    Style="{StaticResource alternativeLoginButton}"
                    ImageSource="ic_apple.png" />

            </Grid>
            
        </StackLayout>

    </Grid>

</ContentPage>